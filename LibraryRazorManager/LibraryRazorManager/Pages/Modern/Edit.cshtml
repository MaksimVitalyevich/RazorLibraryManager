@page "{year:int}/{title}"
@model LibraryRazorManager.Pages.Modern.EditModel
@{
	ViewData["Title"] = "Modern Book Edit Form";
}

<form method="post">
    <input type="hidden" asp-for="CurrentBook.Category" />

    <div class="form-group">
        <label asp-for="CurrentBook.Era">Book era:</label>
        <select asp-for="CurrentBook.Era" asp-items="Model.AvailableEra"></select>
        <span asp-validation-for="CurrentBook.Era"></span>
    </div>

    <div class="form-group">
        <label asp-for="CurrentBook.Title">Book title:</label>
        <input asp-for="CurrentBook.Title" placeholder="Enter title..."/>
        <span asp-validation-for="CurrentBook.Title"></span>
    </div>

    <div class="form-group">
        <label asp-for="CurrentBook.Author">Book author:</label>
        <input asp-for="CurrentBook.Author" placeholder="Enter author fullname..."/>
        <span asp-validation-for="CurrentBook.Author"></span>
    </div>

    <div class="form-group">
        <label asp-for="CurrentBook.Publication">Publication year:</label>
        <input asp-for="CurrentBook.Publication"/>
        <span asp-validation-for="CurrentBook.Publication"></span>
    </div>

    <div class="form-group">
        <label asp-for="CurrentBook.Serial">Serial number:</label>
        <input asp-for="CurrentBook.Serial" placeholder="XXXXXXXXXX"/>
        <span asp-validation-for="CurrentBook.Serial"></span>
    </div>

    <partial name="PartialTemplates/_ModernBook" model="Model.CurrentBook" />

    <button type="submit" asp-page-handler="Save" class="btn btn-success">Save</button>
</form>
